<controls:ShineUserControl x:Class="Shine.Uno.Shared.Controls.WeatherItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Shine.Uno.Shared.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="WeatherItemControl">

	<StackPanel Height="Auto">
		<TextBlock Text="{Binding Title, ElementName=WeatherItemControl}"
		           Foreground="DarkSlateGray" />
		<TextBlock Text="{Binding Description, ElementName=WeatherItemControl}"
		           Foreground="Black"
		           Margin="20,0,0,0" />
	</StackPanel>
</controls:ShineUserControl>